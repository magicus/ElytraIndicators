  "authors": [
    "magicus"
  ],
  "contact": {
    "homepage": "https://github.com/magicus/elytraindicators",
    "issues": "https://github.com/magicus/elytraindicators/issues",
    "sources": "https://github.com/magicus/elytraindicators"
  },

  "license": "LGPLv3",
  "icon": "assets/elytraindicators/icon.png",

  "environment": "client",

  "entrypoints": {
    "client": [
      "se.icus.mag.elytraindicators.ElytraIndicatorsMod"
    ],
    "modmenu": [
      "se.icus.mag.elytraindicators.config.ElytraIndicatorsModMenuIntegration"
    ]
  },

  "depends": {
    "fabricloader": ">=${loader_version}",
